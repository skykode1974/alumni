"use client";

import { useParams } from 'next/navigation';
import { useEffect, useState } from 'react';

interface Blog {
  id: number;
  title: string;
  slug: string;
  image: string;
  created_at: string;
  publisher_name: string;
  content: string;
}

export default function BlogDetailPage() {
  const { slug } = useParams();
  const [blog, setBlog] = useState<Blog | null>(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    if (slug) {
      fetch(`https://admin.geniunai.com/api/blogs/${slug}`)
        .then(res => res.ok ? res.json() : null)
        .then(data => {
          setBlog(data);
          setLoading(false);
        });
    }
  }, [slug]);

  if (loading) return <p className="text-center py-20">Loading...</p>;
  if (!blog) return <p className="text-center py-20 text-red-500">Blog not found.</p>;

  const fullUrl = `https://geniunai.com/blog/${blog.slug}`;

  return (
    <div className="max-w-4xl mx-auto px-4 py-16">
      <img
        src={`https://admin.geniunai.com/storage/${blog.image}`}
        alt={blog.title}
        className="w-full h-auto rounded-xl shadow mb-6"
      />

      <p className="text-sm text-gray-500">
        {new Intl.DateTimeFormat('en-CA', {
          timeZone: 'America/Toronto',
          weekday: 'short',
          year: 'numeric',
          month: 'short',
          day: '2-digit',
        }).format(new Date(blog.created_at))} · {blog.publisher_name}
      </p>

      <h1 className="text-3xl font-bold mt-2 mb-6">{blog.title}</h1>

      <div
        className="prose prose-lg text-gray-800 mb-12"
        dangerouslySetInnerHTML={{ __html: blog.content }}
      />

      <div className="border-t pt-8 mt-12 flex flex-col md:flex-row md:items-center justify-between gap-6">
        <a
          href="/#blog"
          className="inline-block bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition font-medium"
        >
          ← Back to Blog
        </a>

        <div className="flex gap-4 flex-wrap">
          <span className="text-sm text-gray-600 font-medium self-center">Share:</span>

          <a
            href={`https://twitter.com/intent/tweet?url=${fullUrl}&text=${encodeURIComponent(blog.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            className="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition text-sm"
          >
            🐦 Twitter
          </a>

          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${fullUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            className="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-800 transition text-sm"
          >
            💼 LinkedIn
          </a>

          <a
            href={`https://wa.me/?text=${encodeURIComponent(`Check out this blog: ${fullUrl}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            className="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition text-sm"
          >
            📲 WhatsApp
          </a>
        </div>
      </div>
    </div>
  );
}
